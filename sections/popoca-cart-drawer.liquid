{%- comment -%}
  Popoca custom cart drawer - built from scratch for learning.
  This will be wired to Ajax cart logic in popoca-cart-drawer.js
{%- endcomment -%}


<section aria-label="Cart Drawer" class="absolute top-4 right-0 w-[500px] h-3/4 z-10 bg-slate-400">
    <div>
        <h2 class="font-bold text-2xl text-center">{{ section.settings.header | escape}}</h2>

        {% for item in cart.items %}
            <div class="w-full flex items-center gap-3 p-2">

                <a href="{{ item.url }}">
                    <div class="w-[50px] aspect-[2/3] overflow-hidden bg-gray-100 z-50">
                        {{ item.image | image_url: width: 200 | image_tag: class: 'w-full h-full object-cover' }}
                    </div>
                </a>

                <h3>{{ item.title }}</h3>
                <h3>Quantity: {{ item.quantity }}</h3>
                <h3>{{ item.final_line_price | money }}</h3>


            </div>
        {% endfor %}
    </div>
</section>



{% schema %}
    {
        "name": "Cart Drawer",
        "settings": [
                {
                    "type": "text",
                    "id": "header",
                    "label": "Cart heading",
                    "default": "Shopping Cart"
                }
            ],
        "presets": [
                {
                    "name": "Cart"
                }
            ]
    }

{% endschema %}